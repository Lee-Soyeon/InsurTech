	<script>
		$("#registerBtn").click(function () {
		var username = $("#username").val();
		alert("username : ", username);
		var email = $("#email").val();
		var password = $("#password").val();
		var bank = $("#bank").val();
		var account = $("#account").val();
	
		$.ajax({
				url:'/register',
				type : 'POST',
				data : {
					username: username,
					email: email,
					password: password,
					bank: bank,
					account: account
				},
				success:function(responseData){
				  if(responseData == "1"){
					alert("가입 완료");
					//로그인 화면으로 넘어가면 좋을 것 같아요. - 미래
